<resources>
    <style name="Theme.Pillware" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/azulprimario</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name ="android:windowBackground">@color/azulSP</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/azulSP</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/pillware_logo_inset</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.Pillware</item> </style>

    <style name="SpinnerColorTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorOnSurface">@color/text</item>
        <item name="colorControlHighlight">@color/text</item>
        <item name="colorControlNormal">@color/text</item>
        <item name="colorControlActivated">@color/text</item>
    </style>
    <style name="SpinnerColorTheme2" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="colorOnSurface">@color/black</item>
    <item name="colorControlHighlight">@color/black</item>
    <item name="colorControlNormal">@color/black</item>
    <item name="colorControlActivated">@color/black</item>
    </style>
</resources>
