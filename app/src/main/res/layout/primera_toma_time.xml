<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@drawable/card_view2"
    android:padding="8dp">

    <TextView
        android:id="@+id/tituloselecthora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Introduce la hora de tu primera toma"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/leaguespartanmedium"
        android:textColor="@color/azulSP"
        android:textSize="16sp"/>

    <LinearLayout
        android:id="@+id/containerHoraToma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/containertext2"
        android:orientation="vertical"
        android:padding="8dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/tituloselecthora"
        app:layout_constraintStart_toStartOf="@+id/tituloselecthora"
        app:layout_constraintTop_toBottomOf="@+id/tituloselecthora" />

    <Button
        android:id="@+id/btnAddHora"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/azulSP"
        android:fontFamily="@font/leaguespartanregular"
        android:text="+ Agregar Hora"
        android:textColor="@color/white"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/containerHoraToma"
        app:layout_constraintTop_toBottomOf="@+id/containerHoraToma" />
</androidx.constraintlayout.widget.ConstraintLayout>